{
  "appId": "com.fezcard.game",
  "productName": "Fez Card Game",
  "directories": {
    "output": "dist-packages"
  },
  "files": [
    "dist/**/*",
    "src/renderer/public/**/*",
    "node_modules/**/*",
    "!node_modules/electron/**/*",
    "!node_modules/electron-builder/**/*",
    "!**/*.{md,txt,log}"
  ],
  "mac": {
    "category": "public.app-category.games",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ]
  },
  "win": {
    "target": [
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ]
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      }
    ],
    "category": "Game"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  }
}